@model LoginViewModel

@{
	ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-controller="Login" asp-action="Login"  method="post">
	<div>
		<label asp-for="UserName"></label>
		<input asp-for="UserName" placeholder="UserName" />
		<span asp-validation-for="UserName"></span>
	</div>
	<div>
		<label asp-for="Password"></label>
		<input asp-for="Password" placeholder="Password" />
		<span asp-validation-for="Password"></span>
	</div>
	<input type="submit" value="Submit" asp-action="Login" />
	@Html.ValidationMessage("User")
</form>
